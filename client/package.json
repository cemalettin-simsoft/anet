{
  "name": "client",
  "version": "0.1.0",
  "private": "true",
  "homepage": "/assets/client",

  "scripts": {
    "dev": "NODE_ENV=development webpack --config config/webpack.dev.js",
    "prod": "NODE_ENV=production webpack --config config/webpack.prod.js",
    "start": "NODE_ENV=development webpack serve --config config/webpack.dev.js",
    "lint-fix": "prettier --write 'config/**/*.js' 'platform/**/*.js' 'src/**/*.js' && NODE_ENV=development eslint --fix 'config/**/*.js' 'platform/**/*.js' 'src/**/*.js'",
    "jest": "NODE_ENV=test jest --testPathPattern='tests/unitTests'"
  },
  "dependencies": {
    "bootstrap": "4.6.0",
    "core-js": "3.8.3",
    "formik": "2.2.6",
    "locale-compare-polyfill": "0.0.2",
    "lodash": "4.17.20",
    "prop-types": "15.7.2",
    "react": "17.0.1",
    "react-bootstrap": "1.4.3",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "uuid": "8.3.2",
    "yup": "0.32.8"
  },
  "devDependencies": {
    "@babel/core": "7.12.13",
    "@babel/eslint-parser": "7.12.13",
    "@babel/plugin-proposal-class-properties": "7.12.13",
    "@babel/plugin-proposal-decorators": "7.12.13",
    "@babel/plugin-proposal-do-expressions": "7.12.13",
    "@babel/plugin-proposal-export-default-from": "7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "7.12.13",
    "@babel/plugin-proposal-function-sent": "7.12.13",
    "@babel/plugin-proposal-json-strings": "7.12.13",
    "@babel/plugin-proposal-logical-assignment-operators": "7.12.13",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.12.13",
    "@babel/plugin-proposal-numeric-separator": "7.12.13",
    "@babel/plugin-proposal-optional-chaining": "7.12.13",
    "@babel/plugin-proposal-pipeline-operator": "7.12.13",
    "@babel/plugin-proposal-throw-expressions": "7.12.13",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-syntax-import-meta": "7.10.4",
    "@babel/plugin-transform-proto-to-assign": "7.12.13",
    "@babel/plugin-transform-react-jsx": "7.12.13",
    "@babel/preset-react": "7.12.13",
    "@babel/register": "7.12.13",
    "@babel/runtime": "7.12.13",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@wdio/browserstack-service": "6.12.1",
    "@wdio/cli": "6.12.1",
    "@wdio/local-runner": "6.12.1",
    "@wdio/mocha-framework": "6.11.0",
    "@wdio/spec-reporter": "6.11.0",
    "@wdio/sync": "6.11.0",
    "autoprefixer": "10.2.4",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-preset-react-app": "10.0.0",
    "chromedriver": "88.0.0",
    "circular-dependency-plugin": "5.2.2",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "7.0.0",
    "cross-fetch": "3.0.6",
    "css-loader": "5.0.1",
    "dotenv": "8.2.0",
    "eslint": "7.19.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-config-standard": "16.0.2",
    "eslint-config-standard-react": "11.0.1",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-chai-expect": "2.2.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-webpack-plugin": "2.5.0",
    "file-loader": "6.2.0",
    "html-loader": "1.3.2",
    "html-webpack-plugin": "5.0.0",
    "ignore-loader": "0.1.2",
    "jest": "26.6.3",
    "js-yaml": "4.0.0",
    "json-loader": "0.5.7",
    "postcss": "8.2.4",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "5.0.0",
    "prettier": "2.2.1",
    "react-test-renderer": "17.0.1",
    "selenium-webdriver": "4.0.0-alpha.8",
    "style-loader": "2.0.0",
    "terser-webpack-plugin": "5.1.1",
    "thread-loader": "3.0.1",
    "wdio-chromedriver-service": "6.0.4",
    "webdriverio": "6.12.1",
    "webpack": "5.21.1",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  },
  "jest": {
    "moduleDirectories": [
      "./src",
      "./platform/node",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/FileStub.js",
      "^.+\\.css$": "<rootDir>/config/jest/CSSStub.js"
    },
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "testEnvironment": "jsdom"
  },
  "browserslist": [
    "> 1%",
    "IE 11"
  ],
  "babel": {
    "presets": [
      "react-app",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-transform-proto-to-assign",
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions",
      "@babel/plugin-proposal-export-default-from",
      "@babel/plugin-proposal-logical-assignment-operators",
      "@babel/plugin-proposal-optional-chaining",
      [
        "@babel/plugin-proposal-pipeline-operator",
        {
          "proposal": "minimal"
        }
      ],
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-do-expressions"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jquery": true,
      "jest": true
    },
    "extends": [
      "react-app",
      "standard",
      "standard-react"
    ],
    "globals": {
      "browser": "readonly"
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
      "chai-expect",
      "flowtype",
      "import",
      "jsx-a11y",
      "node",
      "promise",
      "react",
      "react-hooks",
      "standard"
    ],
    "ignorePatterns": ["**/build/*.js", "**/dist/*.js"],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "eqeqeq": [
        "error",
        "always"
      ],
      "import/no-anonymous-default-export": "off",
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1,
          "ignoredNodes": [
            "JSXElement",
            "JSXElement > *",
            "JSXAttribute",
            "JSXIdentifier",
            "JSXNamespacedName",
            "JSXMemberExpression",
            "JSXSpreadAttribute",
            "JSXExpressionContainer",
            "JSXOpeningElement",
            "JSXClosingElement",
            "JSXText",
            "JSXEmptyExpression",
            "JSXSpreadChild"
          ]
        }
      ],
      "jsx-quotes": [
        "warn",
        "prefer-double"
      ],
      "multiline-ternary": "off",
      "quote-props": [
        "warn",
        "as-needed"
      ],
      "quotes": [
        "warn",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react/jsx-closing-bracket-location": "warn",
      "react/jsx-closing-tag-location": "warn",
      "react/jsx-handler-names": "off",
      "react/jsx-indent": [
        "warn",
        2
      ],
      "react/jsx-indent-props": [
        "warn",
        2
      ],
      "react/no-did-update-set-state": "warn",
      "semi": [
        "warn",
        "never"
      ],
      "space-before-function-paren": [
        "warn",
        "never"
      ],
      "curly": [
        "error",
        "all"
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": false
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "trailingComma": "none"
  }
}
